{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true, // Next.js handles transpilation
    "incremental": true, // Recommended for Next.js
    "isolatedModules": true, // Required by Next.js
    "resolveJsonModule": true, // Good practice, often needed
    "skipLibCheck": true, // Can speed up type checking

    "plugins": [{ "name": "next" }]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
