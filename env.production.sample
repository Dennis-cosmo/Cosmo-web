# ========================================
# COSMO - PRODUCTION ENVIRONMENT
# ========================================

# Environment
NODE_ENV=production

# Domain Configuration
DOMAIN=tudominio.com
FRONTEND_URL=https://tudominio.com

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=cosmo_prod
POSTGRES_PASSWORD=TU_PASSWORD_SUPER_SEGURO_AQUI
POSTGRES_DB=cosmo_production
DATABASE_URL=postgresql://cosmo_prod:TU_PASSWORD_SUPER_SEGURO_AQUI@postgres:5432/cosmo_production

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=TU_REDIS_PASSWORD_AQUI
REDIS_URL=redis://:TU_REDIS_PASSWORD_AQUI@redis:6379

# JWT & Authentication
JWT_SECRET=TU_JWT_SECRET_MUY_LARGO_Y_SEGURO_AQUI_MINIMO_64_CARACTERES
JWT_EXPIRATION=1d
REFRESH_TOKEN_EXPIRATION=7d
NEXTAUTH_SECRET=TU_NEXTAUTH_SECRET_DIFERENTE_AL_JWT_AQUI
NEXTAUTH_URL=https://tudominio.com

# API Configuration
PORT=4000

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# AI Configuration
DEEPSEEK_API_KEY=TU_DEEPSEEK_API_KEY_AQUI
DEEPSEEK_MODEL=deepseek-chat
DEFAULT_AI_PROVIDER=deepseek
OPENAI_API_KEY=TU_OPENAI_API_KEY_AQUI

# ERP Integration (QuickBooks ejemplo)
QB_CLIENT_ID=TU_QUICKBOOKS_CLIENT_ID
QB_CLIENT_SECRET=TU_QUICKBOOKS_CLIENT_SECRET
QB_REDIRECT_URI=https://tudominio.com/api/auth/quickbooks/callback
QB_ENVIRONMENT=production

# Email Configuration (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-app-password

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_LOGGING=true

# Security
CORS_ORIGIN=https://tudominio.com
ALLOWED_ORIGINS=https://tudominio.com,https://www.tudominio.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM 