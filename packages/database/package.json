{
  "name": "@cosmo/database",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -b .",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts",
    "lint": "eslint \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "migrate": "ts-node src/scripts/migrate.ts",
    "typeorm": "ts-node --project tsconfig.json ../../node_modules/typeorm/cli.js",
    "migration:create": "yarn typeorm migration:create",
    "db:migrate": "yarn typeorm migration:run -d src/config/typeorm.ts",
    "db:generate": "yarn typeorm migration:generate -d src/config/typeorm.ts",
    "db:revert": "yarn typeorm migration:revert -d src/config/typeorm.ts"
  },
  "dependencies": {
    "@cosmo/shared": "*",
    "@nestjs/microservices": "^11.1.3",
    "@nestjs/websockets": "^11.1.3",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "tsup": "^8.0.2"
  }
}
